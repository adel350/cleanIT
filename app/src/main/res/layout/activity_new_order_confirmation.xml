<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F1E8"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/emptySpace1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="" />


    <RelativeLayout
        android:id="@+id/emailSignUpTitle"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"

        android:layout_below="@id/emptySpace1">

        <TextView
            android:id="@+id/emptySpaceInner1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_toRightOf="@id/emptySpaceInner1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/emptySpaceInner2"
            android:layout_toRightOf="@id/emailIcon"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"

            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/emptySpaceInner2"
            app:fontFamily="@font/abril_fatface"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/emptySpace2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:layout_below="@id/emailSignUpTitle"/>

    <TextView
        android:id="@+id/firstDescriptiveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emptySpace2"
        android:layout_centerHorizontal="true"
        android:text="Your order "
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:fontFamily="@font/abril_fatface" />

    <TextView
        android:id="@+id/secondDescriptiveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="has been placed!"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_below="@id/firstDescriptiveText"
        app:fontFamily="@font/abril_fatface" />

    <TextView
        android:id="@+id/emptySpace3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:layout_below="@id/secondDescriptiveText"/>

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emptySpace3"
        android:layout_centerHorizontal="true"

        android:text="Pickup is tomorrow at 6 PM"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="@font/abril_fatface"
        />



    <TextView
        android:id="@+id/emptySpace4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=""
        android:layout_below="@id/emailText"/>





    <RelativeLayout
        android:id="@+id/signInButton"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/white_rectangle"
        android:layout_below="@id/emptySpace4"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="gotToMainAccount">



        <TextView
            android:id="@+id/signInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Go to account"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:fontFamily="@font/abril_fatface"/>
    </RelativeLayout>



</RelativeLayout>